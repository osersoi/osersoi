---
layout: base.njk
---

{% if image %}
<div class="post-hero">
    <div class="post-hero__image" style="background-image: url('{{ image }}');"></div>
    <div class="post-hero__overlay"></div>
</div>
{% endif %}

<article class="blog-post">
    <div class="container">
        <div class="post-header">
            <p class="section-label">Blog</p>
            <h2>{{ title }}</h2>
            <p class="post-meta">Publié le {{ date | dateFormat }}</p>
            {% if description %}
            <p class="post-description">{{ description }}</p>
            {% endif %}
        </div>

        <div class="post-card-wrapper">
            <div class="post-content">
                {{ content | safe }}
            </div>

            <div class="post-footer">
                <a href="/blog/" class="btn-secondary">← Retour au blog</a>
            </div>
        </div>
    </div>
</article>

